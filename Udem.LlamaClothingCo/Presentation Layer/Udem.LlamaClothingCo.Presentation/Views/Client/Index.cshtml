@model IEnumerable<Udem.LlamaClothingCo.Entities.Client>

@{
    ViewBag.Title = "Client Catalog";
}

<h2>Client Catalog</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            RFC
        </th>
        <th>
            IsClientActive
        </th>
      <!--  <th>
            Telephone
        </th>-->
        <th>
            BillingAddressID
        </th>
        <th>
            ClientTypeID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RFC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsClientActive)
        </td>
        <!--<td>
            Html.DisplayFor(modelItem => item.Telephone)
        </td>-->
        <td>
            @Html.DisplayFor(modelItem => item.BillingAddressID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientTypeId)
      </td> 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClientId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientId })
        </td>
    </tr>
}

</table>
